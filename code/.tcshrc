
#
# configure the shell and set up the environment ...
#

umask 022



setenv MANPATH /usr/local/man:/usr/man
setenv _POSIX2_VERSION 199209
setenv LC_COLLATE "C"
setenv LC_ALL "C"
set noclobber
set autolist
set autoexpand
set nohup
set nobeep
unset autocorrect
unset correct
unalias bc

set host_type = linux

module load samtools/1.2.1

set path = ( \
	$path \
	~/Bin/$host_type \
	~/Code/scripts \
)

set cdpath = ( $home )

setenv PYTHONPATH /ifs/home/at570/disk1/Resources/downloads/joblib-0.6.4:/ifs/home/at570/disk1/Resources/downloads/h5py-2.0.1/lib/python2.7/site-packages:/ifs/home/at570/disk1/Resources/downloads/mirnylib:/ifs/home/at570/disk1/Resources/downloads/hiclib/src
