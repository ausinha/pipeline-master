setenv MANPATH /usr/local/man:/usr/man
#if (`env | grep -cw REMOTEHOST` != 0) then
#  setenv DISPLAY ${REMOTEHOST}:0.0
#endif

setenv SVN_EDITOR /bin/vi

set my_host = $HOSTNAME
set prompt = "%{\033[35m%}%n@$my_host %{\033[31m%}%c4 [\!]%{\033[30m%} " 
set prompt2="  " prompt3="%R ? "

set history = 1000
set ignoreeof



#
# SET UP ALIASES
#


# Aliases for date/time
alias   date    'date "+%A %d %B %Y, %T"'
alias   addpath "set path = ($path \!*)"


# Aliases for ls
alias   la      ls -AF
alias   ll      ls -l 
alias   lla     ls -aglF

# Aliases for mv, cp, rm
alias   mv      mv -i
alias   cp      cp -i
alias   rm      rm -i

# Programs
alias   c       clear

# Shell commands
alias   a       alias
alias   ua      unalias
alias   j       jobs -l
alias   so      source

# Miscelleaneous
alias   q       'quota -v'
alias	f	finger

# misc
alias	xterm	"xterm -fg black -bg white -sb"
alias	noreglabel	'sed "s/^[^	]\+/_/"'
alias	format4go2	'sort | joint - ~/Systems/ontology/data/GO.terms | sort +3 -4g'
alias	format4go	"tr '|_' '\t ' | cols -d '	' 0 3 4 5 6 1 2"
alias	fasta2reg	"rows -p 2 -m -t '	' | cols -d '	' 2 1"
alias	reg2fasta	"cols -d '	' 1 0 | sed 's/^/>_/' | tr '\t' '\n' | sed 's/_/_	/'"
alias	flatten	"tr ' ' '\n' | grep '.\+'"
alias	joint	"join -t'	'"

